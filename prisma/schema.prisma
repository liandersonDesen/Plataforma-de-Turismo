generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/database/database.sqlite"
}
enum Role {
  USER
  ADMIN
}
model User {
  id Int @id @default(autoincrement())
  name String
  email String
  phone String
  password String
  createAT DateTime @default(now())
  role Role @default(USER)
}
model Place {
  id Int @id @default(autoincrement())
  name String
  description String
  address String
  type String
  rating Float 
}